#!/bin/sh
echo "🚀 Running pre-commit checks..."

echo "🔍 Type checking..."
/c/Program\ Files/nodejs/npm.cmd run type-check

echo "🧹 Linting and fixing..."
/c/Program\ Files/nodejs/npm.cmd run lint:fix

echo "💅 Checking formatting..."
/c/Program\ Files/nodejs/npm.cmd run format:check

if [ "$CLAUDE_CODE_AUTO_COMMIT" = "true" ]; then
  echo "📚 Updating documentation..."
  /c/Program\ Files/nodejs/npm.cmd run claude:docs
fi

echo "✅ Pre-commit checks completed!"
