{
  "name": "acas-runner",
  "version": "0.1.0",
  "private": true,
  "description": "AI-powered developer workflow automation system",
  "scripts": {
    "dev": "next dev --turbopack -p 9002",
    "dev:debug": "NODE_OPTIONS='--inspect' next dev --turbopack -p 9002",
    "dev:ai": "concurrently \"npm run dev\" \"npm run genkit:dev\" --names \"web,ai\" --prefix-colors \"blue,green\"",
    "genkit:dev": "genkit start -- tsx src/ai/dev.ts",
    "genkit:watch": "genkit start -- tsx --watch src/ai/dev.ts",
    "build": "next build",
    "build:analyze": "ANALYZE=true next build",
    "start": "next start",
    "lint": "next lint",
    "lint:fix": "next lint --fix",
    "lint:strict": "next lint --max-warnings 0",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "typecheck": "tsc --noEmit",
    "type-check": "tsc --noEmit",
    "test": "jest --watch",
    "test:ci": "jest --ci --coverage --watchAll=false",
    "test:e2e": "playwright test",
    "clean": "rimraf .next dist node_modules/.cache .claude-cache",
    "claude:setup": "node scripts/claude-setup.js",
    "claude:analyze": "node scripts/analyze-project.js",
    "claude:docs": "node scripts/generate-docs.js",
    "generate:docs": "tsx ./scripts/generate-docs.ts",
    "db:migrate": "echo 'Add your database migration command here'",
    "db:studio": "echo 'Add your database studio command here'",
    "prepare": "husky install",
    "precommit": "lint-staged",
    "postinstall": "patch-package"
  },
  "dependencies": {
    "@genkit-ai/googleai": "^1.8.0",
    "@genkit-ai/next": "^1.8.0",
    "@hookform/resolvers": "^4.1.3",
    "@opentelemetry/api": "^1.9.0",
    "@opentelemetry/exporter-jaeger": "^2.0.1",
    "@opentelemetry/instrumentation": "^0.202.0",
    "@opentelemetry/sdk-node": "^0.202.0",
    "@radix-ui/react-accordion": "^1.2.3",
    "@radix-ui/react-alert-dialog": "^1.1.6",
    "@radix-ui/react-avatar": "^1.1.3",
    "@radix-ui/react-checkbox": "^1.1.4",
    "@radix-ui/react-dialog": "^1.1.6",
    "@radix-ui/react-dropdown-menu": "^2.1.6",
    "@radix-ui/react-label": "^2.1.2",
    "@radix-ui/react-menubar": "^1.1.6",
    "@radix-ui/react-popover": "^1.1.6",
    "@radix-ui/react-progress": "^1.1.2",
    "@radix-ui/react-radio-group": "^1.2.3",
    "@radix-ui/react-scroll-area": "^1.2.3",
    "@radix-ui/react-select": "^2.1.6",
    "@radix-ui/react-separator": "^1.1.2",
    "@radix-ui/react-slider": "^1.2.3",
    "@radix-ui/react-slot": "^1.1.2",
    "@radix-ui/react-switch": "^1.1.3",
    "@radix-ui/react-tabs": "^1.1.3",
    "@radix-ui/react-toast": "^1.2.6",
    "@radix-ui/react-tooltip": "^1.1.8",
    "@tanstack-query-firebase/react": "^1.0.5",
    "@tanstack/react-query": "^5.66.0",
    "@types/ws": "^8.18.1",
    "chokidar": "^4.0.3",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "date-fns": "^3.6.0",
    "dotenv": "^16.5.0",
    "firebase": "^11.8.1",
    "genkit": "^1.8.0",
    "lucide-react": "^0.475.0",
    "next": "^15.0.0",
    "next-themes": "^0.3.0",
    "patch-package": "^8.0.0",
    "react": "^18.3.1",
    "react-day-picker": "^8.10.1",
    "react-dom": "^18.3.1",
    "react-hook-form": "^7.54.2",
    "recharts": "^2.15.1",
    "tailwind-merge": "^3.0.1",
    "tailwindcss-animate": "^1.0.7",
    "ws": "^8.18.2",
    "zod": "^3.24.2"
  },
  "devDependencies": {
    "@next/bundle-analyzer": "^15.0.0",
    "@types/chokidar": "^1.7.5",
    "@types/node": "^20",
    "@types/react": "^18",
    "@types/react-dom": "^18",
    "@types/vscode": "^1.100.0",
    "@typescript-eslint/eslint-plugin": "^8.0.0",
    "@typescript-eslint/parser": "^8.0.0",
    "concurrently": "^9.0.0",
    "cross-env": "^7.0.3",
    "eslint": "^8.57.0",
    "eslint-config-next": "^15.3.3",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-unused-imports": "^4.0.0",
    "genkit-cli": "^1.8.0",
    "lint-staged": "^15.0.0",
    "postcss": "^8",
    "prettier": "^3.0.0",
    "prettier-plugin-tailwindcss": "^0.6.0",
    "rimraf": "^6.0.0",
    "tailwindcss": "^3.4.1",
    "typescript": "^5",
    "vscode": "^1.1.34"
  },
  "lint-staged": {
    "*.{ts,tsx,js,jsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,md,yml,yaml}": [
      "prettier --write"
    ]
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  },
  "keywords": [
    "ai",
    "automation",
    "developer-tools",
    "workflow",
    "nextjs",
    "typescript",
    "claude",
    "openai"
  ]
}
